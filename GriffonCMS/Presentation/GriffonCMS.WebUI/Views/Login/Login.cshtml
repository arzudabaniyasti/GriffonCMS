@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}

<!-- Login -->
<div class="page-links">
    <a href="@Url.Action("Login","Login")" class="active">Login</a><a href="@Url.Action("Register","Register")">Register</a>
</div>
<form>
    <input class="form-control" type="text" name="username" placeholder="E-mail Address" required>
    <input class="form-control" type="password" name="password" placeholder="Password" required>
    <div class="form-button">
        <button id="submit" type="submit" class="ibtn" onclick="location.href='@Url.Action("Index", "Dashboard")'" > Login</button>
    </div>
</form>
<div class="other-links">
    <span>Or login with</span><a href="#">Facebook</a><a href="#">Google</a><a href="#">Linkedin</a>
</div>